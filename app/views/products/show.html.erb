<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

  </article>



<% if current_user %>

  <h4>Submit a Review for this Product:</h4>

  <div class="row">
  <dl class="dl-horizontal">

  <%= form_for [@product, @newreview] do |f| %>

    <div class="add-padding">
      <%= f.label :write_a_review %>
      <span> --> </span>
      <%= f.text_area :description %>
    </div>

    <div class="add-padding">
      <%= f.label :select_a_rating_between_1_to_5 %>
      <span> --> </span>
      <%= f.select :rating, options_for_select([1,2,3,4,5]) %>
    </div>

    <div class="signup-button"><%= f.submit 'Submit' %></div>


  <% end %>

  </dl>
  </div>



  <h4>Here are what our other users are saying about this product:</h4>


  <% @reviews.each do |r| %>

  <div class="add-padding">
    <div class="row">
      <dl class="dl-horizontal">
        <dt>Review</dt>
        <dd> <%= r.description %> </dd>
        <dt>Rating</dt>
        <dd> <%= r.rating %> </dd>
      </dl>
    </div>
  </div>

  <% end %>


<% end %>

</section>


