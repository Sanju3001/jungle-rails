<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

  </article>

</section>

<h4>Submit a Review for this Product</h4>

<%= form_for [@product, @newreview] do |f| %>

  <div>Review description:
  <%= f.label :description %>
  <%= f.text_area :description %>
  </div>

  <div>
  Select a rating:
  <%= f.label :rating %>
  <%= f.select :rating, options_for_select([1,2,3,4,5]) %>
  </div>

  <div><%= f.submit 'Submit' %></div>

<% end %>

<h4>Here's a review of this product:</h4>
<div class="row">
  <dl class="dl-horizontal">
    <dt>Review</dt>
    <dd> <%= @review.description %> </dd>
    <dt>Rating</dt>
    <dd> <%= @review.rating %> </dd>
  </dl>
</div>






